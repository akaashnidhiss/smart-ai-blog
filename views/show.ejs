<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet">
    <link href="article_styles.css" rel="stylesheet">


    <title> üìù
        <%= article.title %>
    </title>
</head>

<body>
    <div class="container" style="max-width: 70%;">



        <h1 class="mt-5 mb-1" style="">
            <%= article.title %>
        </h1>

        <% for(var i=0; i < article.tags.length ; i++) { %>
            <a href="/categories/<%= article.tags[i] %>" class="btn btn-outline-secondary btn-sm" style="padding: 4px 10px !important;
                font-size: 12px;
                min-width: 50px;
                border-radius: 20px;
                " role="button">

                <%= article.tags[i] %>

            </a>
            <% } %>

                <div class="text-muted mb-2">
                    <%= article.createdAt.toLocaleDateString() %>
                </div>

                <a href="/" class="btn btn-dark">All Articles</a>
                <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                <form action="/articles/<%= article.id %>?_method=DELETE" class="d-inline" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

                <div class="mb-3 mt-4">
                    <%- article.sanitisedHTML %>
                </div>

                <div class="card mt-lg-5 mb-4">
                    <div class="card-header" style="background: -webkit-linear-gradient(#eb3349 , #FF6384);
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent; color: white;">
                        Featured
                    </div>
                    <div class="row" style="padding: 1rem;">
                        <% for(var i=0; i < article_suggest.length ; i++) { %>
                            <div class="col" style="margin-top: auto ; margin-bottom: auto;">
                                <a href="/articles/<%= article_suggest[i].slug %>" style="color: black; text-decoration: none;display: inline-block !important">
                                    <div class="card" style="width: 18rem; height: 25rem; margin: auto;">
                                        <div class="card-body">
                                            <a href="/articles/<%= article_suggest[i].slug %>" style="color: black; text-decoration: none;">
                                                <h4 class="card-title" style="font-size: 160%;">
                                                    <%= article_suggest[i].title %>
                                                </h4>
                                                <div class="card-subtitle text-muted mb-2">
                                                    <%= article_suggest[i].createdAt %>
                                                </div>
                                                <div class="card-text mb-2">
                                                    <%= article_suggest[i].description %>
                                                </div>
                                                <!-- <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a> -->
                                        </div>
                                    </div>
                                    </a>
                            </div>

                            <% } %>
                    </div>
                </div>
    </div>

</body>

</html>